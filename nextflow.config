profiles {

    standard {
        process {
            executor = 'local'
            cpus = { 8 }
            memory = { 125.GB }
            time = { 1.h * task.attempt }
            errorStrategy = { task.exitStatus == 143 ? 'retry' : 'finish' }
            maxRetries = 2
            maxErrors = '-1'
        }
    }

    milou {
        includeConfig 'conf/milou.conf'
    }
    
    irma {
        includeConfig 'conf/irma.conf'
    }
    local_test {
        includeConfig 'conf/local_test.conf'
    }
}
